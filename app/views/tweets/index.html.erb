<div class="container">
  <p style="color: green"><%= notice %></p>
  <!--Header -->
  <%= render 'header' %>
  <!--create new tweet -->
  <%= render "form", tweet: @tweet %>
  <!-- Show all tweets -->
  <div id="tweets">
    <% @tweets.each do |tweet| %>
      <%= render tweet %>
      <p>
        <%= link_to "Show this tweet", tweet %>
      </p>
    <% end %>
  </div>
  <%== pagy_nav(@pagy) %>
</div>
